{% extends 'base.html.twig' %}

{% block title %}Names{% endblock %}

{% block body %}
    <h1 class="my-4">Names</h1>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Longitude</th>
                <th class="text-center">Latitude</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <tr class="align-middle">
                <td>New Name</td>
                <td class="text-end">-</td>
                <td class="text-end">-</td>
                <td class="text-end">
                    <a href="{{ path('app_name_create') }}" class="text-decoration-none">Create</a>
                </td>
            </tr>
            {% for name in names | sort((a, b) => a.name <=> b.name) %}
            <tr class="align-middle">
                <td>{{ name.name }}</td>
                <td class="text-end">{{ name.longitude }}</td>
                <td class="text-end">{{ name.latitude }}</td>
                <td class="text-end">
                    <a href="{{ path('app_name_edit', {'id': name.id}) }}" class="text-decoration-none">Edit</a> 
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

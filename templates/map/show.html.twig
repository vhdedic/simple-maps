{% extends 'base.html.twig' %}

{% block title %}Show {{ map.name }}{% endblock %}

{% block body %}
    <h1 class="my-4">Show {{ map.name }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Names</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <tr class="align-middle">
                <td>Add New Name</td>
                <td class="text-end">
                    <a href="{{ path('app_name_map_add', {'id': map.id}) }}" class="text-decoration-none">Add</a>
                </td>
            </tr>
            {% for name_map in name_maps %}
            <tr class="align-middle">
                <td>{{ name_map.name }}</td>
                <td class="text-end">
                    <a href="{{ path('app_name_map_remove', {'mapId': map.id, 'nameMapId': name_map.id}) }}" class="text-decoration-none">
                        Remove
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
